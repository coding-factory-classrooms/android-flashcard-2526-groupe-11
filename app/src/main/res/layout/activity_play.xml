<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="543dp"
        android:layout_height="1376dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.527"
        app:srcCompat="@drawable/backgraound_level_one" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="456dp"
        android:layout_height="672dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.365"
        app:srcCompat="@drawable/carte" />

    <TextView
        android:id="@+id/numquestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        app:layout_constraintBottom_toTopOf="@+id/numquestion2"
        app:layout_constraintEnd_toEndOf="@+id/numquestion2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/numquestion2"
        tools:text="question : 0" />

    <TextView
        android:id="@+id/numquestion2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.034"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:text="réponses : " />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="241dp"
        android:layout_height="25dp"
        android:layout_marginTop="256dp"
        android:text="__________________________________"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <ImageButton
        android:id="@+id/response1"
        android:layout_width="49dp"
        android:layout_height="74dp"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:srcCompat="@drawable/card_hog_rider"
        tools:layout_editor_absoluteY="408dp" />

    <ImageButton
        android:id="@+id/response2"
        android:layout_width="49dp"
        android:layout_height="74dp"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.442"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:srcCompat="@drawable/card_prince"
        tools:layout_editor_absoluteY="408dp" />

    <ImageButton
        android:id="@+id/response3"
        android:layout_width="49dp"
        android:layout_height="74dp"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.786"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:srcCompat="@drawable/card_valkiry"
        tools:layout_editor_absoluteY="408dp" />

    <Button
        android:id="@+id/lissenbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#D9561C"
        android:text="écouter"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="288dp" />

    <ImageButton
        android:id="@+id/homebutton"
        android:layout_width="68dp"
        android:layout_height="64dp"
        app:srcCompat="@drawable/button_home"
        tools:layout_editor_absoluteX="347dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/emoteencadre"
        android:layout_width="117dp"
        android:layout_height="81dp"
        android:layout_marginTop="496dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.962"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:srcCompat="@drawable/emote_encadre" />

    <ImageView
        android:id="@+id/emotereaction"
        android:layout_width="90dp"
        android:layout_height="81dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/emoteencadre"
        app:layout_constraintEnd_toEndOf="@+id/emoteencadre"
        app:layout_constraintHorizontal_bias="0.814"
        app:layout_constraintStart_toStartOf="@+id/emoteencadre"
        app:srcCompat="@drawable/emote_win" />

</androidx.constraintlayout.widget.ConstraintLayout>